<?php $__env->startSection('content'); ?>
<div class="col-md-6 col-sm-6 col-xs-12">	
	<h2><?php echo e("LOGIN"); ?></h2>
	<?php if(count($errors) > 0): ?>
		<ul>
		<?php foreach($errors->all() as $error): ?>
			<li><?php echo e($error); ?></li>
		<?php endforeach; ?>
		</ul>
	<?php endif; ?>
	<form method="POST" action="<?php echo e(url('loginCheck')); ?>">
		<input type="hidden" name="_token" value="<?php echo e(csrf_token()); ?>" />

		<div class="input-group">
		    <span class="input-group-addon"><span class="input-text">Email </span></span>
		    <input type="text" name="email" class="form-control input-lg" placeholder="Email" value="<?php echo e(old('email')); ?>" />
		    <?php echo $errors->first('email', '<div class="alert alert-danger"><b>:message</b></div>'); ?>

		</div><!-- End .input-group -->
		<div style="clear:both;width:100%;height:20px;"></div>

		<div class="input-group">
		    <span class="input-group-addon"><span class="input-text">Password </span></span>
		    <input type="password" name="password" class="form-control input-lg" placeholder="Password" />
		    <?php echo $errors->first('password', '<div class="alert alert-danger"><b>:message</b></div>'); ?>

		</div><!-- End .input-group -->
		<div style="clear:both;width:100%;height:20px;"></div>

		<div class="sm-margin"></div><!-- space -->
		<button type="submit" name="aksi" class="btn btn-primary btn-lg"> Login</button>
	</form>
</div>
<?php $__env->stopSection(); ?>
<?php echo $__env->make('theme01/layout', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>